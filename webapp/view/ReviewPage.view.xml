<mvc:View controllerName="com.training.exer1bernaldo.controller.ReviewPage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="idReviewPage" title="{i18n>reviewTitle}" floatingFooter="true" class="custPage">
        <content>
            <core:Fragment fragmentName="com.training.exer1bernaldo.fragment.ShoppingCart" type="XML" />       
        </content>

        <footer>
            <OverflowToolbar id="idOFTFooterReview">
                <ToolbarSpacer id="idTSpacerFooterReview"/>
                <Button id="idBtnBack" text="{i18n>backBtn}" tooltip="{i18n>backTooltip}" press="onPressBack"/>
                <Button id="idBtnApprove2" text="{i18n>Approve}" press="onAddItem" type="Emphasized" />
                <Button id="idBtnReview2" text="{i18n>Review}" press="onAddItem" type="Emphasized" />                
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>